<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Background color -->
    <solid android:color="@android:color/white" />

    <!-- Optional stroke for border -->
    <stroke
        android:width="2dp"
        android:color="#DDDDDD" />

    <!-- Optional shadow -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>
